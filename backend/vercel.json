{
  "version": 2,
  "builds": [
    {
    "src": "Dockerfile",
    "use": "@vercel/docker",
    "config": { 
      "maxLambdaSize": "15mb", 
      "runtime": "python3.9"
    }
  },
  {
    "src": "build.sh",
    "use": "@vercel/static-build",
    "config": {
      "distDir": "staticfiles"
    }
  }
],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "backend/.wsgi.py"
    },
    {
      "src": "/admin/(.*)",
      "dest": "backend/admin.py"
    },
    {
      "src": "/graphiql/(.*)",
      "dest": "backend/graphiql.py"
    }
  ]
}